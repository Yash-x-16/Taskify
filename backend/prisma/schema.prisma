
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  Id  Int @unique @default(autoincrement())
  username String 
  password String
  email String @unique 
  profilePicture String? 
  todos  Todo[] @relation("todo")
} 

model Todo{
  todoId Int @unique @default(autoincrement()) 
  title String 
  description String? 
  isDone Boolean
  userId Int 
  user  Users @relation(name: "todo",fields: [userId],references: [Id])
}